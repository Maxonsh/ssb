.page-header
  .h1 Registration
  hr
.user_new
  = form_for @resource_user, :method => :post do |f|
    .form-group.row
      .col-2
        = f.label :email
      .col-3
        = f.text_field :email, :class => 'form-control'
        .error-msg = resource_user.errors[:email].join(', ')

    .form-group.row
      .col-2
      .col-4 The password will be sent on email

    = render 'company_fields', :f => f, :resource_user => @resource_user

    .form-group.row
      .col-2
      .col-4
        = f.submit 'Become a Member', :class => "btn btn-primary btn-md"
