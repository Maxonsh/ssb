.page-header
  h1 Contact us

.col-md-4.feedback
  = form_for(@feedback) do |f|
    .form-group
      .field-label
        = f.label :name
      .field-input
        = f.text_field :name, :autofocus => true, :class => 'form-control'

    .form-group
      .field-label
        = f.label 'Your email or mobile phone number'
      .field-input
        = f.text_field :contacts, :class => 'form-control'

    .form-group
      .field-label
        = f.label :message
      .field-input
        = f.text_area :message, :class => 'form-control'
      .error-msg = @feedback.errors[:message].join(', ')

    .actions
      = f.submit 'Send feedback', :class => "btn btn-primary btn-md"
.col-md-8
